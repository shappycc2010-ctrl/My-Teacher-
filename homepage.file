<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Mr. Kelly AI – Coding Class</title>
<style>
  body {
    margin: 0;
    background-color: #0d0d0d;
    overflow: hidden;
    font-family: "Poppins", sans-serif;
    color: #ffffff;
  }

  /* School bus animation */
  .bus {
    position: absolute;
    bottom: 100px;
    left: -250px;
    width: 200px;
    animation: drive 6s linear forwards;
  }

  @keyframes drive {
    from { left: -250px; }
    to { left: 110%; }
  }

  /* Intro container */
  .intro {
    opacity: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    text-align: center;
    animation: fadeIn 2s ease forwards;
    animation-delay: 6s;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  /* Mr. Kelly avatar */
  .avatar {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background: url("https://cdn-icons-png.flaticon.com/512/6997/6997662.png") center/cover no-repeat;
    margin-bottom: 20px;
  }

  /* Typing text */
  #typingText {
    font-size: 1.2rem;
    max-width: 650px;
    line-height: 1.6;
    color: #f2f2f2;
  }

  /* Subscribe button */
  #subscribeBtn {
    display: none;
    margin-top: 35px;
    background: #00aaff;
    color: #fff;
    border: none;
    padding: 12px 30px;
    border-radius: 10px;
    font-size: 1rem;
    cursor: pointer;
    transition: 0.3s;
  }

  #subscribeBtn:hover {
    background: #0088cc;
  }
</style>
</head>
<body>

<!-- 🚌 School bus drives across -->
<img src="https://cdn-icons-png.flaticon.com/512/1048/1048311.png" class="bus" alt="School Bus">

<!-- 👨‍🏫 Mr. Kelly intro -->
<div class="intro">
  <div class="avatar"></div>
  <div id="typingText"></div>
  <button id="subscribeBtn" onclick="subscribe()">Subscribe to Join Class</button>
</div>

<script>
  // 🧠 Mr. Kelly’s welcome text
  const text = "Welcome! I am Mr. Kelly, your one and only teacher. I was created by Shappycc (A.K.A Bolu) to teach the rest of the world about coding. I will love to have you in my class — please subscribe to partake...";
  const typingText = document.getElementById("typingText");
  const subscribeBtn = document.getElementById("subscribeBtn");

  // Typewriter animation
  function typeWriter(text, i = 0) {
    if (i < text.length) {
      typingText.innerHTML += text.charAt(i);
      setTimeout(() => typeWriter(text, i + 1), 45);
    } else {
      subscribeBtn.style.display = "inline-block";
    }
  }

  // Delay typing until bus drives off
  setTimeout(() => typeWriter(text), 6500);

  function subscribe() {
    alert("Redirecting to subscription page...");
    window.location.href = "/subscribe"; // replace with your actual payment/lesson unlock route
  }
</script>

</body>
</html>
