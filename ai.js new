import express from "express";
import OpenAI from "openai";

const router = express.Router();
const openai = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

router.post("/api/chat", async (req, res) => {
  try {
    const { message, studentName, mode, topic } = req.body;

    // Choose behavior based on mode
    let systemPrompt = "";

    switch (mode) {
      case "lesson":
        systemPrompt = `You are Mr. Kelly, a warm and intelligent AI teacher. 
        Teach ${studentName} about ${topic || "any topic"} in a fun and clear way.
        Use simple examples and break concepts into easy steps.`;
        break;
      case "quiz":
        systemPrompt = `You are Mr. Kelly, the AI quiz master. 
        Give ${studentName} a quiz question about ${topic || "general knowledge"}.
        After their answer, give feedback and the correct explanation.`;
        break;
      case "motivation":
        systemPrompt = `You are Mr. Kelly, a motivational teacher. 
        Encourage ${studentName} to study hard and stay positive.`;
        break;
      default:
        systemPrompt = `You are Mr. Kelly, a helpful AI teacher who can chat, teach, or quiz.`;
    }

    const completion = await openai.chat.completions.create({
      model: "gpt-4o",
      messages: [
        { role: "system", content: systemPrompt },
        { role: "user", content: `${studentName}: ${message}` }
      ],
    });

    res.json({ reply: completion.choices[0].message.content });
  } catch (err) {
    console.error("Error:", err);
    res.status(500).json({ error: "AI response failed." });
  }
});

export default router;
