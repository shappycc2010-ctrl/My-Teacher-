.typewriter {
  display: inline-block;
  font-family: "Poppins", sans-serif;
  font-size: 1.2rem;
  color: #e0e0e0;
  white-space: pre-wrap;
  overflow: hidden;
  border-right: 3px solid #00d1ff; /* blinking cursor */
  animation: blinkCursor 0.7s infinite;
  user-select: none;             /* prevent text highlighting */
  -webkit-user-select: none;     /* Safari fix */
  -moz-user-select: none;        /* Firefox fix */
  -ms-user-select: none;         /* Edge fix */
  caret-color: transparent;      /* hide blinking text cursor */
  background: none;              /* remove blue background */
}
