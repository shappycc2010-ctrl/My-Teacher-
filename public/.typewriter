.typewriter {
  display: inline-block;
  font-family: "Poppins", sans-serif;
  font-size: 1.2rem;
  color: #e0e0e0;
  white-space: pre-wrap;
  overflow: hidden;
  border-right: 3px solid #00d1ff; /* blinking cursor */
  animation: blinkCursor 0.7s infinite;
  user-select: none;             /* prevent text highlighting */
  -webkit-user-select: none;     /* Safari fix */
  -moz-user-select: none;        /* Firefox fix */
  -ms-user-select: none;         /* Edge fix */
  caret-color: transparent;      /* hide blinking text cursor */
  background: none;              /* remove blue background */
}
.typed-text, .typewriter {
  background: none !important;       /* remove any background */
  user-select: none !important;      /* disable text selection */
  -webkit-user-select: none !important;
  -moz-user-select: none !important;
  -ms-user-select: none !important;
  caret-color: transparent !important; /* hide default cursor */
}

.typed-text span {
  background: none !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  color: inherit !important;
}
