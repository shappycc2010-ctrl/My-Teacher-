import express from "express";
import cors from "cors";
import bodyParser from "body-parser";
import OpenAI from "openai";

const app = express();
app.use(cors());
app.use(bodyParser.json());

const PORT = process.env.PORT || 10000;

// âœ… Initialize OpenAI correctly
const openai = new OpenAI({
  apiKey: process.env.OPENAI_API_KEY,
});

// âœ… Root route
app.get("/", (req, res) => {
  res.send("âœ… Mr. Kelly AI Teacher server is live and teaching!");
});

// âœ… Chat route
app.post("/api/chat", async (req, res) => {
  try {
    const { message, studentName } = req.body;

    if (!message || !studentName) {
      return res.status(400).json({ error: "Missing message or student name." });
    }

    const completion = await openai.chat.completions.create({
      model: "gpt-4o-mini",
      messages: [
        {
          role: "system",
          content: `You are Mr. Kelly, a professional AI teacher who runs the My Teacher platform.
          You teach web development and AI creation. Be friendly, clear, and supportive. 
          Never give homework answers until submission.`
        },
        { role: "user", content: `${studentName}: ${message}` }
      ]
    });

    res.json({ reply: completion.choices[0].message.content });
  } catch (error) {
    console.error("âŒ Error:", error);
    res.status(500).json({ error: "An error occurred while processing your request." });
  }
});

// âœ… Start server
app.listen(PORT, () => {
  console.log(`ðŸš€ Mr. Kelly AI Teacher running on port ${PORT}`);
});
