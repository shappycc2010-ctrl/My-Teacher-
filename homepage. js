  <script>
    document.getElementById("startClass").addEventListener("click", async () => {
      if (document.documentElement.requestFullscreen) {
        await document.documentElement.requestFullscreen();
      }
      document.body.style.backgroundColor = "#000";
      document.querySelector(".message-box").innerHTML = `
        <h2>üß† Welcome to class!</h2>
        <p>Mr. Kelly: "Let's continue from where we stopped last time. Open your mind and let's code!"</p>
