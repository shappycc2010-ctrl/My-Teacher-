<body>
  <h1 id="message">Welcome back to class. Phones are now in focus mode — no distractions. Let’s get ready to learn coding.</h1>
  <button onclick="exitFocus()">Exit Focus Mode</button>

  <script>
    // Play Mr. Kelly's voice
    window.onload = () => {
      const speech = new SpeechSynthesisUtterance(
        "Welcome back to class. Phones are now in focus mode — no distractions. Let's get ready to learn coding."
      );
      speech.rate = 1;
      speech.pitch = 1.1;
      speech.volume = 1;
      speech.lang = "en-US";
      speechSynthesis.speak(speech);
    };

    function exitFocus() {
      alert("Focus Mode exited. Returning to normal mode...");
      window.location.href = "/"; // go back to homepage or dashboard
    }
  </script>
</body>
