<img src="https://cdn-icons-png.flaticon.com/512/1048/1048311.png" class="bus" alt="School Bus">

<div class="intro">
  <div class="avatar"></div>
  <div id="typingText"></div>
  <button id="subscribeBtn" onclick="subscribe()">Subscribe to Class</button>
</div>

<script>
  // Text typing animation
  const text = "Welcome! I am Mr. Kelly, your one and only teacher. I was created by Shappycc (A.K.A Bolu) to teach the world about coding. I would love to have you in my class — please subscribe to partake.";
  const typingText = document.getElementById("typingText");
  const subscribeBtn = document.getElementById("subscribeBtn");

  function typeWriter(text, i = 0) {
    if (i < text.length) {
      typingText.innerHTML += text.charAt(i);
      setTimeout(() => typeWriter(text, i + 1), 50);
    } else {
      subscribeBtn.style.display = "inline-block";
    }
  }

  setTimeout(() => typeWriter(text), 5500);

  function subscribe() {
    alert("Redirecting to subscription page...");
    window.location.href = "/subscribe"; // You can change this later
  }
</script>

