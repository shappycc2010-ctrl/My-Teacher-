<script>
  // 🧠 Mr. Kelly’s welcome text
  const text = "Welcome! I am Mr. Kelly, your one and only teacher. I was created by Shappycc (A.K.A Bolu) to teach the rest of the world about coding. I will love to have you in my class — please subscribe to partake...";
  const typingText = document.getElementById("typingText");
  const subscribeBtn = document.getElementById("subscribeBtn");

  // Typewriter animation
  function typeWriter(text, i = 0) {
    if (i < text.length) {
      typingText.innerHTML += text.charAt(i);
      setTimeout(() => typeWriter(text, i + 1), 45);
    } else {
      subscribeBtn.style.display = "inline-block";
    }
  }

  // Delay typing until bus drives off
  setTimeout(() => typeWriter(text), 6500);

  function subscribe() {
    alert("Redirecting to subscription page...");
    window.location.href = "/subscribe"; // replace with your actual payment/lesson unlock route
  }
</script>

</body>
