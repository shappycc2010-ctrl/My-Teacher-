    animation: drive 5s linear forwards;
  }

  @keyframes drive {
    from { left: -200px; }
    to { left: 110%; }
  }

  /* Mr. Kelly intro */
  .intro {
    opacity: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    text-align: center;
    animation: fadeIn 2s ease forwards;
    animation-delay: 5s;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  .avatar {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    background: url("https://cdn-icons-png.flaticon.com/512/6997/6997662.png") center/cover no-repeat;
    margin-bottom: 20px;
  }

  #typingText {
